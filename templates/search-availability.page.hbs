{{template "base" .}}


{{define "content"}}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center mt-5 mb-3">Search for Availability</h1>

            <form action="/search-availability" method="post" novalidate class="needs-validation">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}" id="">
                <div class="form-row mt-5">
                    <div class="form-row row" id="reservation-dates">
                        <div class="col">
                            <label for="start-date" class="form-label">Starting date<sup style="color: red;">*</sup>
                            </label>
                            <input required class="form-control" type="text" name="start" autocomplete="off">
                        </div>
                        <div class="col">
                            <label for="end-date" class="form-label">Ending date<sup style="color: red;">*</sup>
                            </label>
                            <input required class="form-control" type="text" name="end" autocomplete="off">
                        </div>
                    </div>
                </div>
                <hr>
                <button type="submit" class="btn btn-success mx-auto d-block mt-3">Search Availability</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

{{end}}

{{define "JS"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangepicker = new DateRangePicker(elem, {
        // ...options
        format: "yyyy-mm-dd",
        minDate: new Date(),
    });
</script>

{{end}}